<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white bg-[url('https://images.unsplash.com/photo-1625334666162-8ad10e7332d2?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover bg-center">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(elem){ %>
            <div class="card w-38">
                <div class=" w-full h-40 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>"  alt="hi"/>
                </div>
                <h3 class="mt-1 text-lg font-semibold "><%= elem.title %></h3>
            </div>
        <% }) %>
    </div>
</div>

<% include ./partials/footer.ejs %>