<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
            <div class=" relative h-72 w-52 top-32">
                <div class=" w-full h-52 bg-zinc-600 shadow-xl rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>"  alt="hi"/>
                </div>
                <h3 class="mt-1 text-xl font-semibold "><%= elem.title %></h3>
                <h5 class="text-sm opacity-40">@<%= elem.user.username %></h5>
            </div>
        <% }) %>

    </div>
</div>

<% include ./partials/footer.ejs %>