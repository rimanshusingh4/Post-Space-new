<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen  text-white pt-1 bg-[url('https://images.unsplash.com/photo-1570475754561-4effe71c5084?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover bg-center">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image"/>
    </form>


<!-- Profile  Start Here -->
    <div class="profdets flex flex-col items-center mt-10 ">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 cursor-pointer absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class=" text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-36 h-36 bg-zinc-200 rounded-2xl overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="Profile"/>
            </div>
        </div>
        <h1 class="text-3xl font-semibold text-white"><%= user.fullname %></h1>
        <h3 class="text-md text-white">@<%= user.username %></h3>
        <a class="px-7 py-3 mt-5 bg-zinc-700 rounded-full text-white text-sm font-semibold" href="/edit">Edit</a>
        <a href="/addpost" class="px-10 py-2 rounded-lg bg-orange-600 text-sm font-semibold mt-3">Add New Post</a>
    </div>

<!-- Card start here  -->

    <div class="cards flex flex-wrap gap-10 px-10 mt-16">
        <div class="card text-white p-10">
            <div class="w-52 h-44 rounded-xl bg-zinc-600 overflow-hidden">
                <img class="w-full h-full" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="card"/>
            </div>
            <a href="/show/posts" class="text-xl font-semibold mt-3">Your  Pins</a>
            <h3 class="text-sm font-medium opacity-40"><%= user.posts.length %> Pins</h3>
        </div>
        
    </div>
</div>

<script>
    document.querySelector("#uploadicon").addEventListener("click", function(){
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
    })
</script>
<% include ./partials/footer.ejs %>